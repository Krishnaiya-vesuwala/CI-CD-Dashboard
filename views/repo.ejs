<!DOCTYPE html>
<html>
<head>
  <title>Repositories</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-white min-h-screen py-10 px-6">
  <div class="absolute top-6 right-6">
    <a href="/" class="bg-red-500 hover:bg-red-600 text-white py-2 px-4 rounded-xl">Logout</a>
  </div>

  <h1 class="text-3xl font-bold mb-6 text-center">Your GitHub Repositories</h1>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% if (repos && repos.length > 0) { %>
      <% repos.forEach(repo => { %>
        <div class="bg-gray-800 p-6 rounded-2xl shadow-lg hover:shadow-2xl transform hover:scale-105 transition-all">
          <form action="/runs" method="POST">
            <input type="hidden" name="name" value="<%= repo.name %>">
            <button type="submit" class="text-xl font-semibold text-blue-400 hover:underline"><%= repo.name %></button>
          </form>
          <p class="text-sm mt-2 text-gray-400"><%= repo.description || 'No description' %></p>
        </div>
      <% }) %>
    <% } else { %>
      <p class="col-span-full text-center text-gray-400">No repositories found.</p>
    <% } %>
  </div>
</body>
</html>
